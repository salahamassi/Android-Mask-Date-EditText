<resources>
    <declare-styleable name="DateEditText">
        <attr name="dividerCharacter" format="enum">
            <enum name="slash" value="0"/>
            <enum name="minus" value="1"/>
            <enum name="point" value="2"/>
        </attr>


        <attr name="dateFormat" format="enum">
            <enum name="ddMMyyyy" value="0"/>
            <enum name="MMyy" value="1"/>
            <enum name="DDMM" value="2"/>
        </attr>

        <attr name="maxDate" format="string"/>
        <attr name="minDate" format="string"/>
        <attr name="autoCorrect" format="boolean"/>
        <attr name="helperTextEnabled" format="boolean"/>
        <attr name="helperTextHighlightedColor" format="color"/>

    </declare-styleable>
</resources>
